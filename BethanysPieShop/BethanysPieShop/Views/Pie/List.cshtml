@model IEnumerable<Pie>
<html>
<head>
    <meta charset="utf-8">
    <title>Bethany's Pie Shop</title>
</head>
<body>
    @ViewBag.CurrentCategory
    @foreach (var pie in Model)
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
            <h4>@pie.Category.CategoryName</h4>
        </div>
    }
</body>
</html>
